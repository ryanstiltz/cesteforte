<!DOCTYPE html>
<html>
<head>
  <title>Cestforte</title>
  <%= stylesheet_link_tag   'site' ,'data-turbolinks-track' => true%>
  <%= stylesheet_link_tag 'products','data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'bootstrap.min','data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<link href='http://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
         <img alt="Ceste Forte" src="<%= asset_path 'logoAccent.png' %>">
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="/products">Store</a></li>
          <li><a href="">Look_Book</a></li>
          <li><a href="">About</a></li>
          <li><a href="">Contact</a></li>
        </ul>
        <div class="navbar-right">
        <% if has_order? %>
          <b><%= current_order.total_items%>X</b>
          <%= link_to number_to_currency(current_order.total_before_tax), basket_path %>
          <img src="<%= asset_path 'carticon.png'%>" >
        <% end %>
      </div>
      </div>
    </div>
  </nav>



<%= yield %>

</body>
</html>
